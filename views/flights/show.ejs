<%- include('../partials/head') %>

    <section>
        <div>Airline: </div>
        <div>
            <%= flight.airline %>
        </div>
        <div>FlightNo: </div>
        <div>
            <%= flight.flightNo %>
        </div>
        <div>Airport: </div>
        <div>
            <%= flight.airport %>
        </div>
        <div>Departure Date/Time: </div>
        <div>
            <%= flight.departs %>
        </div>
    </section>
    <br><br>
    <h3>Add a Destination</h3>
    <fieldset>
        <form action="/flights/<%= flight._id %>" method="POST">
            <label>Arrival:
            <input type="datetime-local" name="arrival">
          </label><br>
            <label for="airportField">Airport:
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DFW">DFW</option>
                <option value="DEN">DEN</option>
                <option value="LAX">LAX</option>
                <option value="SAN">SAN</option>
              </select>
  </label><br>
            <div class="float-right">
                <input class="button" type="submit" value="Add Destination">
            </div>
        </form>
    </fieldset>
    <br>
    <h2>Destinations</h2>
    <% flight.destinations.sort((x, y) => x.arrival - y.arrival) %>
        <% if (flight.destinations.length) { %>
            <table>
                <thead>
                    <tr>
                        <th>Arrival Date/Time</th>
                        <th>Airport</th>
                    </tr>
                </thead>
                <tbody>
                    <% flight.destinations.forEach(function(flight) { %>
                        <tr>
                            <td>
                                <%= flight.arrival %>
                            </td>
                            <td>
                                <%= flight.airport %>
                            </td>
                        </tr>
                        <% }); %>
                </tbody>
            </table>
            <% } else { %>
                <h5>No Destinations</h5>
                <% } %>
                    <br>
                    <h3>Current Ticketing</h3>
                    <section id="current-tickets">
                        <% if (tickets.length) { %>
                            <table>
                                <thead>
                                    <tr>
                                        <th>Seat Reserved</th>
                                        <th>Price Paid</th>
                                        <!-- <th>Delete Ticket</th> -->
                                    </tr>
                                </thead>
                                <tbody>
                                    <% tickets.forEach(function(ticket) { %>
                                        <tr>
                                            <td>
                                                <%= ticket.seat %>
                                            </td>
                                            <td>
                                                $
                                                <%= ticket.price %>
                                            </td>
                                            <!-- <td>
                                                <form class="del" method="POST" action="/tickets/deleteTicket/<%=ticket.id%>">
                                                    &nbsp;<button type="submit" id="ticket-del">x</button>
                                                </form>
                                            </td> -->
                                        </tr>
                                        <%}); %>
                                </tbody>
                            </table>
                            <% } else { %>
                                <h4>No Ticketing Information Yet</h4>
                                <% } %>
                    </section>
                    <div class="float-right">
                        <a class="button button-outline" href="/flights/<%= flight._id %>/tickets/new">Add New Ticket</a>
                    </div>
                    <br>

                    <%- include('../partials/footer') %>