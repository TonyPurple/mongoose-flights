<%- include('../partials/head.ejs') %>

    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight No</th>
                <th>Departure Date & Time</th>
                <th>Flight Details</th>
                <th>Delete</th>
            </tr>
        </thead>
        <tbody>
            <!-- Write the line of EJS to iterate over flights using forEach -->
            <% flights.forEach(function(flight, idx) { %>
                <tr>
                    <td>
                        <%= flight.airline %>
                    </td>
                    <td>
                        <%= flight.airport %>
                    </td>
                    <td>
                        <%= flight.flightNo %>
                    </td>
                    <td>
                        <% if(flight.departs > new Date()) { %>
                            <%= flight.departs %>
                                <% } else { %>
                                    <span><%= flight.departs %></span>
                                    <% } %>
                    </td>
                    <td><a href="/flights/<%= flight._id %>">DETAILS</a></td>
                    <td>
                        <br>
                        <form action="/flights/<%= flight.id %>?_method=DELETE" method="POST" class="delete">
                            <input class="button" type="submit" value="X">
                        </form>
                    </td>
                </tr>
                <!-- Close the forEach using EJS here -->
                <% }); %>
        </tbody>
    </table>
    </div>
    <%- include('../partials/footer.ejs') %>