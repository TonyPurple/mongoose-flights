<%- include('../partials/head.ejs') %>

    <br>
    <h1>All Flights</h1>
    <table>
        <thead>
            <tr>
                <th>Airline</th>
                <th>Airport</th>
                <th>Flight No</th>
                <th>Departs</th>
            </tr>
        </thead>
        <tbody>
            <!-- Write the line of EJS to iterate over movies using forEach -->
            <% flights.forEach(function(flight) { %>
                <tr>
                    <td>
                        <%= flight.airline %>
                    </td>
                    <td>
                        <%= flight.airport %>
                    </td>
                    <td>
                        <%= flight.flightNo %>
                    </td>
                    <td>
                        <%= flight.departs %>
                    </td>
                </tr>
                <!-- Close the forEach using EJS here -->
                <% }); %>
        </tbody>
    </table>
    </div>
    <%- include('../partials/footer.ejs') %>