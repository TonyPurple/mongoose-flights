<%- include('../partials/head.ejs') %>

    <br>
    <h2>Enter a New Flight</h2>
    <br>
    <form action="/flights" method="POST">
        <fieldset>
            <label for="airlineField">Airline:
            <select id="airlineField">
                <option value="American">American</option>
                <option value="Southwest">Southwest</option>
                <option value="United">United</option>
              </select>
  </label><br>
            <label for="airportField">Airport:
            <select name="airport">
                <option value="AUS">AUS</option>
                <option value="DFW">DFW</option>
                <option value="DEN" selected>DEN</option>
                <option value="LAX">LAX</option>
                <option value="SAN">SAN</option>
              </select>
  </label><br>
            <label>Flight No:
            <input type="number" name="flightNo">
  </label><br>
            <label>Departs:
    <input type="datetime-local" name="departs">
  </label><br>
            <div class="float-right">
                <input class="button" type="submit" value="Add Flight">
            </div>
        </fieldset>
    </form>
    <%- include('../partials/footer.ejs') %>